# Hotel Management System - Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_NAME="Hotel Management System"
APP_URL=http://localhost/hotel-app

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hotel_db
DB_USERNAME=root
DB_PASSWORD=

# Database Options
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_TIMEZONE=Asia/Bangkok

# Session Configuration
SESSION_LIFETIME=3600
SESSION_DRIVER=file
SESSION_COOKIE_NAME=hotel_session
SESSION_DOMAIN=
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Security
CSRF_TOKEN_LIFETIME=3600
ENCRYPTION_KEY=
HASH_DRIVER=bcrypt
HASH_ROUNDS=12

# Timezone and Localization
TIMEZONE=Asia/Bangkok
LOCALE=th
DATE_FORMAT=d/m/Y
TIME_FORMAT=H:i
DATETIME_FORMAT="d/m/Y H:i"

# File Storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
STORAGE_PATH=storage
BACKUP_PATH=storage/backups

# Email Configuration (Optional - for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@hotel.local
MAIL_FROM_NAME="Hotel Management System"

# SMS Configuration (Optional - for notifications)
SMS_DRIVER=
SMS_API_KEY=
SMS_FROM=

# Telegram Bot (Optional - for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# PDF Configuration
PDF_TIMEZONE=Asia/Bangkok
PDF_LOCALE=th
PDF_DPI=96
PDF_DEFAULT_FONT=THSarabunNew

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=single
LOG_PATH=storage/logs

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PATH=storage/cache

# Rate Limiting (API)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_INCLUDE_UPLOADS=false

# Hotel Specific Settings
HOTEL_NAME="Hotel Management System"
HOTEL_ADDRESS="123 Main Street, Bangkok, Thailand"
HOTEL_PHONE="02-000-0000"
HOTEL_EMAIL=info@hotel.local
HOTEL_WEBSITE=https://hotel.local

# Business Settings
BUSINESS_CURRENCY=THB
BUSINESS_TAX_RATE=7
BUSINESS_CHECKOUT_TIME=12:00
BUSINESS_CHECKIN_TIME=14:00

# Room Management
ROOM_AUTO_CHECKOUT_HOURS=24
ROOM_CLEANING_DURATION=30
ROOM_MAINTENANCE_NOTIFICATION=true

# Pricing
RATE_SHORT_3H=200.00
RATE_OVERNIGHT=350.00
RATE_EXTENDED_HOURLY=50.00
RATE_LATE_CHECKOUT_FEE=100.00

# Notifications
NOTIFY_LOW_OCCUPANCY=true
NOTIFY_MAINTENANCE_DUE=true
NOTIFY_BOOKING_CHANGES=true
NOTIFY_PAYMENT_RECEIVED=true

# Integration Settings
PAYMENT_GATEWAY_ENABLED=false
PAYMENT_GATEWAY_SANDBOX=true
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET_KEY=

# Third Party Services
GOOGLE_MAPS_API_KEY=
FACEBOOK_APP_ID=
LINE_NOTIFY_TOKEN=

# Development Tools
QUERY_LOG_ENABLED=false
PROFILER_ENABLED=false
DEBUG_BAR_ENABLED=false

# Feature Flags
FEATURE_ONLINE_BOOKING=true
FEATURE_MOBILE_CHECKIN=false
FEATURE_LOYALTY_PROGRAM=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_ROOM_SERVICE=false

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_STATIC_ASSETS=true
MINIFY_HTML=false
MINIFY_CSS=false
MINIFY_JS=false

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=false
METRICS_ENDPOINT=/metrics